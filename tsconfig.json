{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ESNext"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./app/*"]
    },
    "allowImportingTsExtensions": true,
    "strict": true,
    "declaration": false,
    "noEmit": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["./app/**/*.ts", "./index.ts"]
}
